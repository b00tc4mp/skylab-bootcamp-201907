mixin lang-selector(path)
    ul.lang-nav
        li
          form(method="post" action=path)
            input(type="hidden" name="lang" value="en")
            button EN
        li
          form(method="post" action=path)
            input(type="hidden" name="lang" value="es")
            button ES
        li
          form(method="post" action=path)
            input(type="hidden" name="lang" value="ca")
            button CAT
        li
          form(method="post" action=path)
            input(type="hidden" name="lang" value="fr")
            button FR